{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "src",
    "declaration": true,
    "esModuleInterop": true,
    "inlineSourceMap": false,
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable"
    ],
    "listEmittedFiles": false,
    "listFiles": false,
    "moduleResolution": "Bundler",
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "pretty": true,
    "resolveJsonModule": true,
    "rootDir": "src",
    "skipLibCheck": true,
    "strict": true,
    "sourceMap": true,
    "traceResolution": false,
    "module": "ESNext",
    "outDir": "dist",
    "target": "ESNext",
    "types": [
      "@types/node"
    ]
  },
  "exclude": [
    "node_modules",
    "dist",
    "**/*.spec.ts"
  ],
  "include": [
    "src"
  ]
}
